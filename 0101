/*Write a Console Application Program to calculate the area of a rectangle. 
Prompt the user to enter the length and width. Display the calculated area. 
(use a separate function calculate area).*/

using System;


//Calculate Area Of Rectangle
namespace Labsheet
{
    internal class Program
    {
        static void Main(string[] args)
        {   
            //Input
            Console.WriteLine("Enter Length of rectangle :");
            double len=Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("Enter Width of rectangle :");
            double wid=Convert.ToDouble(Console.ReadLine());
            
            //Process
            double area=wid*len;


            //Output
            Console.WriteLine("Area of rectangle is : " + area);

            Console.ReadKey();
        }
    }
}
